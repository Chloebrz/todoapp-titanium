<Alloy>
    <Collection src = "users" />
        <TabGroup>
            <Tab title = "Login">
                <Window class = "container" layout = "vertical" tabBarHiden = true>
                    <TextField
                        id = "usernameL"
                        class = "username"
                        hintText = "Username"
                        keyboardType = "Titanium.UI.KEYBOARD_DEFAULT"
                        returnKeyType = "Titanium.UI.KEYBOARD_DEFAULT">
                    </TextField>
                    
                    <TextField
                        id = "password"
                        class = "password"
                        hintText = "Password"
                        passwordMask = true
                        keyboardType = "Titanium.UI.KEYBOARD_DEFAULT"
                        returnKeyType = "Titanium.UI.KEYBOARD_DEFAULT">
                    </TextField>
                    
                    <View layout = "horizontal">
                        <Button id = "login" onClick = "login" left = "10%" width = "35%">Login with username</Button>
                        <Button id = "fbButton" left = "10%" width = "35%">Login with Facebook</Button>
                    </View>
                </Window>
            </Tab>
            
            <Tab title = "Register">
                <Window class = "container" layout = "vertical">
                    <TextField
                        id = "usernameR"
                        class = "username"
                        hintText = "Username"
                        keyboardType = "Titanium.UI.KEYBOARD_DEFAULT"
                        returnKeyType = "Titanium.UI.KEYBOARD_DEFAULT">
                    </TextField>
                    
                    <TextField
                        id = "password1"
                        class = "password"
                        hintText = "Password"
                        passwordMask = true
                        keyboardType = "Titanium.UI.KEYBOARD_DEFAULT"
                        returnKeyType = "Titanium.UI.KEYBOARD_DEFAULT">
                    </TextField>
                    
                    <TextField
                        id = "password2"
                        class = "password"
                        hintText = "Password confirmation"
                        passwordMask = true
                        keyboardType = "Titanium.UI.KEYBOARD_DEFAULT"
                        returnKeyType = "Titanium.UI.KEYBOARD_DEFAULT">
                    </TextField>
                    
                    <Button id = "register" onClick = "register">Register</Button>
                </Window>
            </Tab>
        </TabGroup>
        
    
</Alloy>